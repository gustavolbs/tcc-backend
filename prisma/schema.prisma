// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  surname  String
  email    String @unique
  password String
  city     Int
  role     String @default("resident")

  issuesReported Issue[]   @relation("Reporter")
  issuesFiscal   Issue[]   @relation("Fiscal")
  issuesManaged  Issue[]   @relation("Manager")
  Comment        Comment[]
}

model City {
  id        Int    @id @default(autoincrement())
  name      String
  latitude  Float
  longitude Float
}

model Issue {
  id          Int      @id @default(autoincrement())
  status      String   @default("open")
  cityId      Int
  latitude    Float
  longitude   Float
  category    String
  description String
  date        DateTime
  reporterId  Int
  reporter    User     @relation("Reporter", fields: [reporterId], references: [id])
  fiscalId    Int?
  fiscal      User?    @relation("Fiscal", fields: [fiscalId], references: [id])
  managerId   Int?
  manager     User?    @relation("Manager", fields: [managerId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([reporterId])
}

model Comment {
  id        Int       @id @default(autoincrement())
  text      String    @db.VarChar(1024)
  createdAt DateTime  @default(now())
  issueId   Int
  authorId  Int
  author    User      @relation(fields: [authorId], references: [id])
  
  parentId  Int?
  parent    Comment?  @relation("CommentReplies", fields: [parentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  replies   Comment[] @relation("CommentReplies")

  @@index([issueId])
}
